<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Save any kind of movies</h1>
  </div>
</div>
  <div class="container py-5">
      <div class="row">
        <div class="d-flex align-items-center justify-content-between mb-3">
          <h3 class="mb-0">My Lists</h3>
          <%= link_to "Create a movie list", new_list_path, class: "btn btn-success text-white btn-lg " %>
        </div>
        <div class="row">
          <% @lists.each do |list| %>
            <div class="col-12 col-sm-6  mb-3">
              <%= link_to list_path(list), class:"text-white text-decoration-none text-center" do %>
                <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('logo.png') %>)">
                  <%= list.name %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
</div>
